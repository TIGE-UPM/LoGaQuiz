{
	"parserOptions": {
		"parser": "babel-eslint",
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
	},
	"root": true,
	"env": {
        "browser": true,
		"node": true,
        "es2021": true
	},
	"extends": [
		"airbnb-base",
        "plugin:react/recommended"
	],
    "plugins": [
        "react"
    ],
	"rules": {
		"no-param-reassign": [
			"error",
			{
				"props": false
			}
		],
		"no-use-before-define": [
			"error",
			{
				"functions": false
			}
		],
		"newline-per-chained-call": 0,
		"no-bitwise": [
			"off"
		],
		"max-classes-per-file": ["off"],
		"guard-for-in": "off",
		"max-len": [
			"off",
			{
				"code": 200
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_id"
				]
			}
		],
		"object-curly-newline": [
			"off",
			{
				"multiline": true
			}
		],
		"no-restricted-syntax": [
			"off"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": "off",
		"comma-dangle": ["error", {
			"arrays": "always-multiline",
			"objects": "always-multiline",
			"imports": "always-multiline",
			"exports": "always-multiline",
			"functions": "never"
		}],
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		],
		"func-names": [
			"error",
			"never"
		],
		"no-prototype-builtins": [
			"off"
		],
		"no-continue": [
			"off"
		],
		"no-await-in-loop": [
			"off"
		],
		"import/no-unresolved": [2, { "ignore": ["@Components", "@Assets", "@Styles", "@Store", "@Views", "@Src"] }],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
	}
}